<Window x:Class="MyFirstApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="Hello_World" Margin="0,10,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"  />
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="1" FontSize="16" Content="Title of App" Width="Auto" Margin="0,0,10,139" />
        <Label Grid.Row="1" Grid.Column="1" FontSize="16" Content="Sample Text" Width="Auto" Margin="0,0,10,139" Grid.ColumnSpan="3" />
        <Button Grid.Column="1" Content="A" Grid.Row="2" Height="50" Click="Button_Click"/>
        <Button Grid.Column="3" Content="B"  Grid.Row="2" Background="#FF7B0E0E" FontWeight="Bold" Cursor="ScrollSE" Foreground="#FFE8DCDC" Click="Button_Click_1" >
            <Button.Style>
                <Style/>
            </Button.Style>
        </Button>
    </Grid>
</Window>
