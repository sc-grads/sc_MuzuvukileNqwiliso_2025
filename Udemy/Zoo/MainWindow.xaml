<Window x:Class="Zoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoo Management System" Height="550" Width="800">

    <Grid>
        <!-- Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <!-- Header -->
            <RowDefinition Height="30"/>
            <!-- Section Labels -->
            <RowDefinition Height="*"/>
            <!-- Lists -->
            <RowDefinition Height="Auto"/>
            <!-- Shared TextBox + Buttons -->
        </Grid.RowDefinitions>

        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="250"/>
            <!-- Zoo buttons -->
            <ColumnDefinition Width="*"/>
            <!-- Shared TextBox -->
            <ColumnDefinition Width="250"/>
            <!-- Animal buttons -->
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Label Grid.Row="0" Grid.Column="2" Content="Zoo Management System" 
               FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Section Labels -->
        <Label Grid.Row="1" Grid.Column="1" Content="Zoos" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Grid.Row="1" Grid.Column="2" Content="Animals Associated" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Grid.Row="1" Grid.Column="3" Content="Animals" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Lists -->
        <ListBox x:Name="ZoosListBox" Grid.Row="2" Grid.Column="1" Margin="5" SelectionChanged="onSelectedZoo"/>
        <ListBox x:Name="ZoosWithAnimalsListBox" Grid.Row="2" Grid.Column="2" Margin="5"/>
        <ListBox x:Name="AnimalsListBox" Grid.Row="2" Grid.Column="3" Margin="5"/>

        <!-- Zoo Buttons -->
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="5" >
            <Button x:Name="DeleteZooButton" Content="Delete Zoo" Width="200" Height="30" Click="onDeleteZoo"/>
            <Button x:Name="AddZooButton" Content="Add Zoo" Width="200" Height="30" Click="onAddZoo"/>
            <Button x:Name="UpdateZooButton" Content="Update Zoo" Width="200" Height="30" Click="onUpdateZoo"/>
        </StackPanel>

        <!-- Shared TextBox -->
        <TextBox x:Name="SharedNameTextBox" Grid.Row="3" Grid.Column="2" Height="30" Margin="5" HorizontalAlignment="Stretch" Width="Auto" />

        <!-- Animal Buttons -->
        <StackPanel Grid.Row="3" Grid.Column="3" Orientation="Vertical" HorizontalAlignment="Center" Margin="5" >
            <Button x:Name="DeleteAnimalButton" Content="Delete Animal" Width="200" Height="30" Click="onDeleteAnimal"/>
            <Button x:Name="AddAnimalButton" Content="Add Animal" Width="200" Height="30" Click="onAddAnimal"/>
            <Button x:Name="UpdateAnimalButton" Content="Update Animal" Width="200" Height="30" Click="onUpdateAnimal"/>
            <Button x:Name="AddAnimalToZooButton" Content="Add Animal to Zoo" Width="200" Height="30" Click="onAddAnimalToZoo"/>
        </StackPanel>

    </Grid>
</Window>
